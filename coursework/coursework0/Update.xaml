<Window x:Class="coursework0.Update"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:coursework0"
        mc:Ignorable="d"
        Title="Update" Height="400" Width="400">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="46,113,0,0" TextWrapping="Wrap" Text="Post" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="41,39,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top"/>
        <ComboBox x:Name="updateKaf" SelectedIndex="0" Margin="105,73,51,263">
