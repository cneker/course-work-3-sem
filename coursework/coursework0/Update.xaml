        <Button x:Name="insertBtn" Content="Update" HorizontalAlignment="Center" Margin="0,156,0,0" VerticalAlignment="Top" Width="75" Click="Accept_Click"/>
        <TextBox x:Name="nameTextBox" HorizontalAlignment="Left" Height="23" Margin="105,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />
        <TextBlock HorizontalAlignment="Left" Margin="22,76,0,0" TextWrapping="Wrap" Text="Departament" VerticalAlignment="Top"/>
    </Grid>
</Window>
